<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<link rel='stylesheet' href="/css/style.css">
<link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous"/>

</head>
<body >
<div class="container">
  <div class="row m-5 no-gutters shadow-lg bg-white">
    <div class="col-md-6 d-none d-md-block p-0">
      <img src="https://images.unsplash.com/photo-1566888596782-c7f41cc184c5?ixlib=rb-1.2.1&auto=format&fit=crop&w=2134&q=80" class="img-fluid" style="min-height:100%;" />
    </div>
    <div class="col-md-6 bg-white my-auto test" >
      <h3 class="text-center pb-5">Welcome back</h3>
      <h6  class="text-center alert alert-danger alert-content capitalize" style="display: none;"><i class="fas fa-exclamation-triangle"></i> Password dosen't Match</h6>

      <div class="form-style">
        <form id="signin">
          <div class="form-group pb-3">
            <input type="email" placeholder="Email" class="form-control" id="lmail" name='email'>
          </div>
          <div class="form-group pb-3">
            <input type="password" placeholder="Password" class="form-control" id="lpass" name='password'>
          </div>
       
          <div class="pb-2">
            <button type="submit" class="btn btn-primary w-100 font-weight-bold mt-2">Sign Me in</button>
          </div>
        </form>
        
        <div class="pt-4 text-center">
          Create Account. <a href="javascript:void(0)" onclick="toggleForm()">Sign Up</a>
        </div>
      </div>

    </div>
    <div class="col-md-6 bg-white my-auto test d-none">
      <h3 class="text-center pb-5">Register</h3>
      <h6  class="text-center alert alert-danger alert-content" style="display: none;"><i class="fas fa-exclamation-triangle"></i> Password dosen't Match</h6>
      <div class="form-style">
        <form id ="signup">
            <div class="form-group pb-3">
            <input type="text" placeholder="First Name" class="form-control" id="fNmae" name="firstname">
          </div>
          <div class="form-group pb-3">
            <input type="text" placeholder="Lat Name" class="form-control" id="lNmae" name="lastname">
          </div>
          <div class="form-group pb-3">
            <input type="text" placeholder="City" class="form-control" id="city" name="city">
          </div>
          
          <div class="form-group pb-3">
            <input type="email" placeholder="Email" class="form-control" id="email" name = "email" aria-describedby="emailHelp">
          </div>
          <div class="form-group pb-3">
            <input type="password" placeholder="Password" class="form-control" id="pass" name="password">
          </div>
          <div class="form-group pb-3">
            <input type="password" placeholder="Confirm Password" class="form-control" id="Cpass" name="Cpass">
            
          </div>
       
          <div class="pb-2">
            <button type="submit" class="btn btn-primary w-100 font-weight-bold mt-2">Create Account</button>
          </div>
        </form>
        
       
         <div class="pt-4 text-center ">
          Already Registered User?. <a href="javascript:void(0)" onclick="toggleForm()">Login</a>
        </div>
      </div>

    </div>
  </div>
</div>
<script src="https://code.jquery.com/jquery-3.6.0.js" integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=" crossorigin="anonymous"></script><script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
<script src="https://use.fontawesome.com/f59bcd8580.js"></script>
<script>
    const toggleForm = ()=>{
        $('html,body').scrollTop(0);
        $('.test').toggleClass('d-none')
        $('.clickContent').toggleClass('d-none')
        
    }
    //                         sinin                                             
     $('#signin').on('submit',(e)=>{
        e.preventDefault();
        $.post('/signin',$('form#signin').serialize(),(res)=>{
            if(res.response == 'success'){
                window.location.href ='scroll'
            }
            else{
                alertRaise(res.response)
            }
        })
   

    })

    //---------------------------------signup-------------------------------
    $('#signup').on('submit',(e)=>{
        e.preventDefault();
        if ($('#pass').val() === $('#Cpass').val()){
            $.post('/signup',$('form#signup').serialize(),(res)=>{
                if(res.response == 'success'){
                window.location.href ='scroll'
            }
            else{
                alertRaise(res.response)
            }
        })
        }
        else {

            $('#alert-content').css('display', 'block')
            $('#alert-content').delay(5000).fadeOut('slow');

        }
    })

const alertRaise = (content) =>{
    $('.alert-content').html(`<i class="fas fa-exclamation-triangle"></i> ${content}`)
    $('.alert-content').css('display', 'block')
    $('.alert-content').delay(5000).fadeOut('slow');
}
</script>

</body>
</html>