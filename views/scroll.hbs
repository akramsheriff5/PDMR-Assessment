<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>

    <link rel="stylesheet" href="/css/landing.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css"
        integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous" />

</head>

<body>
    <div class="constrain">

        <div class="outer-container m-0 shadow ">
            <div class="top-bar mx-3">
                <h3 >Welcome &nbsp;&nbsp;<span class="header-bold">{{firstname}}{{lastname}}</span></h3>
                <ul class="top-menu">
                    <div class="navigation">

                        <a class="atag button" href="logout">
                            <img class="img"
                                src="https://pbs.twimg.com/profile_images/378800000639740507/fc0aaad744734cd1dbc8aeb3d51f8729_400x400.jpeg">
                            <div class="logout">LOGOUT</div>
                        </a>
                    </div>
                </ul>
            </div>
        </div>

        <div class="container-fluid p-5">
            <div class="row">

                <div class="col card card-body">
                    <div class="card-title  h3 "> Account  Details</div>
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">S.No</th>
                                <th scope="col">First Name</th>
                                <th scope="col">Last Name</th>
                                <th scope="col">Email</th>
                                <th scope="col">City</th>
                                <th scope="col">Edit</th>
                                <th scope="col">Delete</th>
                            </tr>
                        </thead>
                        <tbody id="userTable">
                        </tbody>
                    </table>
                    <div class="modal fade" id="editUserModal" tabindex="-1" aria-labelledby="ModalLabel"
                        aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="ModalLabel">Edit User Details</h5>

                                </div>
                                <div class="modal-body">
                                    <form class="forms-sample" id="edit_user">
                                        <input type="hidden" class="id" name="id" />

                                        <div class="form-group row">
                                            <label class="col-sm-3 col-form-label">
                                                First Name</label>
                                            <div class="col-sm-9">
                                                <input type="text" class="fname form-control" name="fname"
                                                    placeholder="Enter  Name" required />
                                            </div>
                                        </div>
                                        <div class="form-group row py-2">
                                            <label class="col-sm-3 col-form-label">
                                                Last Name</label>
                                            <div class="col-sm-9">
                                                <input type="text" class="lname form-control" name="lname"
                                                    placeholder="Enter  Name" required />
                                            </div>
                                        </div>

                                        <div class="form-group row py-2">
                                            <label class="col-sm-3 col-form-label">Email </label>
                                            <div class="col-sm-9">
                                                <input type="Email" class="email form-control" name="email"
                                                    placeholder="EmailAddress" required />
                                            </div>
                                        </div>
                                        <div class="form-group row py-2">
                                            <label for="userName" class="col-sm-3 col-form-label">City</label>
                                            <div class="col-sm-9">
                                                <input type="text" class="city form-control" name="city"
                                                    placeholder="Enter User Name" required />
                                            </div>
                                        </div>
                                        <div class="form-group row pt-2">
                                            <label class="col-sm-3 col-form-label">Password</label>
                                            <div class="col-sm-9">
                                                <input type="password" class="password form-control" name="password"
                                                    placeholder="Enter password" required />
                                            </div>
                                        </div>

                                        <div class="d-flex justify-content-end ">
                                            <button class=" btn btn-secondary btn-sm mr-2" type="reset"
                                                data-dismiss="modal">
                                                Cancel
                                            </button>&nbsp;&nbsp;&nbsp;
                                            <button type="submit" class="btn btn-primary btn-sm">
                                                Submit
                                            </button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                
            </div>

        </div>


    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.js"
        integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous">
    </script>
    <script src="https://use.fontawesome.com/f59bcd8580.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"
        integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous">
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js"
        integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous">
    </script>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
         const  userDelete = (userId) => {
    Swal.fire({
        title: 'Are you sure ? ',
        text: "You want to delete user",
        icon: 'warning',
        showCancelButton: true,
        confirmButtonColor: '#3085D6',
        cancelButtonColor: '#d33',
        confirmButtonText: 'Yes'
    }).then((result) => {
        if (result.isConfirmed) {
            delId = {
                'id': $(userId).attr('delId')
            }
            $.ajax({
                url: 'd-user',
                method: 'DELETE',
                contentType: 'application/x-www-form-urlencoded',
                data: delId,
                success: function (res) {
                    if (res['response'] == "success") {
                        Swal.fire({
                            position: 'center',
                            icon: 'success',
                            title: 'Deleted Successfully',
                            showConfirmButton: false,
                            timer: 1500
                        })

                        getAllUser();

                    }
                    else {
                        Swal.fire({
                            position: 'center',
                            icon: 'error',
                            title: "Not deleted",
                            showConfirmButton: false,
                            timer: 1500
                        })
                    }

                }
            });

        }
    })



}
        const editUser = (tis) => {
            $('#editUserModal').modal('show')
            $('.id').val($(tis).attr('td_id'));
            $('.fname').val($(tis).attr('td_fname'));
            $('.lname').val($(tis).attr('td_lname'));
            $('.email').val($(tis).attr('td_email'));
            $('.city').val($(tis).attr('td_city'));
            // $('.password').val($(tis).attr('td_password'));
        }

        const getAllUser = () => {
            $.get('all-user', (res) => {
                var tBody = ''
                res.map((ele, inx) => {
                    let sNo = inx + 1
                    tBody += `<tr>
                            <td>${sNo}</td>
                            <td>${ele.firstname}</td>
                            <td>${ele.lastname}</td>
                            <td>${ele.email}</td>
                            <td>${ele.city}</td>
                            <td><a  td_id="${ele._id}" td_fname="${ele.firstname}"td_lname="${ele.lastname}" td_email="${ele.email}"  td_password="${ele.password}" td_city="${ele.city}"  type="button" id="user_edit${ele._id}" data-toggle="modal"
                            data-target="#editUserModal"   onclick="editUser(this)" href="javascript:void(0);"  style="color:#3e04a4;font-size:30px;"><i class="fas fa-user-edit"></i></a></td>
                            <td><a type="button" id="user_del${ele._id}" onclick="userDelete(this)" style="color: red ;font-size:30px;" href="javascript:void(0);" delid="${ele._id}"><i class="fas fa-trash"></i></a></td>
                        </tr>`

                })
                $('#userTable').html('')
                $('#userTable').append(tBody)

            })
        }

        getAllUser()

        $('#edit_user').submit(function (e) {
            e.preventDefault()
        var edit_user = $('form#edit_user').serialize();
        
        $.post('p-user', edit_user, function (res) {
            if (res.response == 'success') {
                Swal.fire({
                    position: 'center',
                    icon: 'success',
                    title: 'Updated Successfully',
                    showConfirmButton: false,
                    timer: 1500
                })
                $('#editUserModal').modal('toggle')
                getAllUser();
                //window.location.href = 'logout';


            }

            else {
                Swal.fire({
                    position: 'center',
                    icon: 'error',
                    title: 'Error not modified',
                    showConfirmButton: false,
                    timer: 1500
                })
            }

        })

        return false

    });
    </script>
</body>

</html>